# Environment Variables Example

# HTTP Server
PORT=3000
LOG_LEVEL=info

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=risk-engine-group
KAFKA_TOPICS=events

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DATABASE=risk_engine
PG_POOL_MAX=10

# Risk Score TTL
RISK_SCORE_TTL_SECONDS=86400